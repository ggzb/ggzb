<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:orientation="horizontal"
      >
    <LinearLayout
        android:id="@+id/room_usernum_container"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/room_usernum_height"
        android:layout_marginRight="2.0dip"
        android:animateLayoutChanges="true"
        android:background="@drawable/room_usernum_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          >
        <com.ilikezhibo.ggzb.xiangmu.RoundImageView
            xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_room_creator"
            android:layout_width="34.0dip"
            android:layout_height="34.0dip"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            imagecontrol:border_inside_color="@color/full_transparent"
            imagecontrol:border_thickness="1.0dp"
            />
        <ImageView
            android:id="@+id/img_user_type"
            android:layout_width="13.0dip"
            android:layout_height="13.0dip"
            android:layout_alignBottom="@id/img_room_creator"
            android:layout_alignRight="@id/img_room_creator"
            android:contentDescription="@string/app_name"
            />
      </RelativeLayout>
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_marginLeft="6dp"
          android:layout_marginRight="12.0dip"
          android:orientation="vertical"
          >
        <TextView
            android:id="@+id/txt_roomtype"
            android:layout_marginTop="3.0dip"
            android:text="直播Live"
            style="@style/room_users_usernum_text"
            />
        <TextView
            android:id="@+id/txt_usernum"
            android:paddingBottom="4.0dip"
            android:singleLine="true"
            android:text="0"
            style="@style/room_users_usernum_text"
            />
      </LinearLayout>

      <Button
          android:id="@+id/bt_attend"
          android:layout_width="30dp"
          android:layout_height="20dp"
          android:layout_centerInParent="true"
          android:layout_marginLeft="-9dp"
          android:layout_marginRight="10dp"
          android:animateLayoutChanges="true"
          android:background="@drawable/main_btn_style"
          android:text="关注"
          android:textColor="@color/white"
          android:textSize="8dp"
          />
    </LinearLayout>
    <!--<android.support.v4.widget.SwipeRefreshLayout-->
    <!--android:id="@+id/swipe_refresh_layout_list"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!-->-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_users"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/room_usernum_height"
        android:scrollbars="none"
        />
    <!--</android.support.v4.widget.SwipeRefreshLayout>-->
  </LinearLayout>
  <include
      layout="@layout/room_gold_count"
      android:id="@+id/gold_count_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      />

  <include
      layout="@layout/marqueeview_layout"
      />
  <LinearLayout
      android:id="@+id/medal_ly"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      android:orientation="horizontal"
      >

    <include
        layout="@layout/medal_gif_host_ly"
        android:id="@+id/gif_iv1"
        android:visibility="gone"
        />
    <include
        layout="@layout/medal_gif_host_ly"
        android:id="@+id/gif_iv2"
        android:visibility="gone"
        />
    <include
        layout="@layout/medal_gif_host_ly"
        android:id="@+id/gif_iv3"
        android:visibility="gone"
        />
    <include
        layout="@layout/medal_gif_host_ly"
        android:id="@+id/gif_iv4"
        android:visibility="gone"
        />
    <include
        layout="@layout/medal_gif_host_ly"
        android:id="@+id/gif_iv5"
        android:visibility="gone"
        />
    <include
        layout="@layout/medal_gif_host_ly"
        android:id="@+id/gif_iv6"
        android:visibility="gone"
        />
    <include
        layout="@layout/medal_gif_host_ly"
        android:id="@+id/gif_iv7"
        android:visibility="gone"
        />
    <include
        layout="@layout/medal_gif_host_ly"
        android:id="@+id/gif_iv8"
        android:visibility="gone"
        />
  </LinearLayout>
</LinearLayout>