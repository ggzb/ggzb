<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_anim_contain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <RelativeLayout
        android:id="@+id/rl_anim_find"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_width="wrap_content"
            android:layout_height="32.0dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            >

            <ImageView
                android:id="@+id/car_one_redpoint"
                android:layout_width="12.0dip"
                android:layout_height="12.0dip"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/gift_common_redpoint"
                />

            <TextView
                android:id="@+id/room_gift_car_one_send_person"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:ellipsize="middle"
                android:gravity="center_vertical"
                android:shadowColor="@color/room_gift_text_shadow"
                android:shadowDx="2.0"
                android:shadowDy="2.0"
                android:shadowRadius="1.0"
                android:singleLine="true"
                android:text="bigèµ "
                android:textColor="@android:color/white"
                android:textSize="16.0sp"
                />
        </LinearLayout>

        <View
            android:id="@+id/view_center"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/castle_flower_bottom"
            android:layout_width="202dp"
            android:layout_height="78dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/castle_flower_bottom"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/castle_cloud_top0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/castle_cloud_top0"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/castle_cloud_top1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/castle_cloud_top0"
            android:layout_marginTop="-35dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/castle_cloud_top1"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/castle_cloud_middle0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/castle_cloud_top1"
            android:layout_alignRight="@id/castle_cloud_top0"
            android:layout_below="@id/castle_cloud_top1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/castle_cloud_middle0"
            android:visibility="invisible" />

        <ImageView

            android:id="@+id/castle_hot_air_balloon0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/castle_cloud_middle0"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@id/castle_cloud_middle0"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/castle_hot_air_balloon0"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/castle_cloud_middle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/castle"
            android:layout_below="@id/castle_cloud_middle0"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="-60dp"
            android:layout_toLeftOf="@id/view_center"
            android:src="@drawable/castle_cloud_middle1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/castle_xml_purple2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/castle_cloud_middle0"
            android:layout_below="@id/castle_cloud_top1"
            android:layout_marginBottom="-40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-50dp"
            android:src="@drawable/castle_xml_purple"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/castle_xml_green1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/castle_cloud_middle0"
            android:layout_alignRight="@id/castle_cloud_middle0"
            android:layout_below="@id/castle_cloud_top1"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="-70dp"
            android:layout_toRightOf="@id/castle_xml_purple2"
            android:src="@drawable/castle_xml_green"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/castle_xml_green3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/castle_cloud_middle1"
            android:layout_alignRight="@id/castle_cloud_middle1"
            android:layout_alignTop="@id/castle_cloud_middle1"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/castle_xml_green"
            android:visibility="invisible" />


        <ImageView

            android:id="@+id/castle"
            android:layout_width="292dp"
            android:layout_height="334dp"
            android:layout_above="@+id/castle_flower_bottom"
            android:layout_centerHorizontal="true"
            android:paddingBottom="30dp"
            android:src="@drawable/castle_castle"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/castle_cloud_middle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/castle_cloud_middle1"
            android:layout_below="@id/castle_cloud_middle0"
            android:layout_marginRight="-60dp"
            android:layout_toRightOf="@+id/view_center"
            android:src="@drawable/castle_cloud_middle2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/castle_xml_purple4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/castle_cloud_middle2"
            android:layout_alignRight="@id/castle_cloud_middle2"
            android:layout_alignTop="@id/castle_cloud_middle2"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/castle_xml_purple"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/castle_cloud_bottom0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/castle"
            android:layout_below="@id/castle_xml_purple4"
            android:layout_marginRight="-30dp"
            android:layout_marginTop="-30dp"
            android:layout_toLeftOf="@id/view_center"
            android:src="@drawable/castle_cloud_bottom0"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/castle_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/castle"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-85dp"
            android:layout_toLeftOf="@id/view_center"
            android:src="@drawable/castle_flower_blue"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/castle_cloud_bottom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/castle_blue"
            android:layout_below="@id/castle_cloud_middle2"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="-50dp"
            android:layout_toRightOf="@id/view_center"
            android:src="@drawable/castle_cloud_bottom1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/castle_purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/castle"
            android:layout_marginRight="65dp"
            android:layout_marginTop="-70dp"
            android:layout_toRightOf="@id/castle_blue"
            android:src="@drawable/castle_flower_purple"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/castle_rainbow0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/castle_rainbow0"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/castle_balloon0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:src="@drawable/castle_balloon0"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/castle_balloon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:src="@drawable/castle_balloon1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/castle_balloon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:src="@drawable/castle_balloon2"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/castle_balloon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:src="@drawable/castle_balloon3"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/castle_balloon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:src="@drawable/castle_balloon4"
            android:visibility="invisible" />

        <FrameLayout

            android:id="@+id/anim_rainbow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/castle_blue"
            android:layout_alignLeft="@id/castle"
            android:layout_alignRight="@id/castle_purple"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="25dp">

            <ImageView
                android:id="@+id/castle_rainbow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/castle_rainbow1"

                android:visibility="invisible" />
        </FrameLayout>

        <ImageView
            android:id="@+id/castle_hot_air_balloon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/castle_hot_air_balloon1"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/castle_hot_air_balloon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:src="@drawable/castle_hot_air_balloon3"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/castle_hot_air_balloon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/castle_cloud_top0"
            android:src="@drawable/castle_hot_air_balloon2"
            android:visibility="invisible" />
    </RelativeLayout>


</RelativeLayout>