<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/bg_buydiamondselector"
    android:clickable="true">

    <LinearLayout
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/charge_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_balance_icon"
                style="@style/charinfor_balance_img"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/txt_charge_value"
                style="@style/setting_item_lefttext"
                android:layout_marginLeft="5.0dip"
                android:paddingLeft="0.0dip"
                android:text="0" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_charge_desc"
            style="@style/charge_event_desc"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/charge_value"
            android:text="赠送0钻石"
            android:visibility="gone" />

        <TextView
            android:id="@+id/bt_pay"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0积分" />
    </LinearLayout>

</RelativeLayout>