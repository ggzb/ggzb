<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >
    <TextView
        android:id="@+id/txt_tip"
        android:layout_below="@id/txt_username"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="-12dp"
        android:layout_marginTop="0.0dip"
        android:layout_toRightOf="@id/user_portrait"
        android:background="@drawable/danmu_text_bg"
        android:maxLength="20"
        android:minEms="4"
        android:paddingBottom="1dp"
        android:paddingLeft="13dp"
        android:paddingRight="5dp"
        android:paddingTop="0dp"
        android:text="bcc"
        android:textColor="@color/global_main_bg"
        android:textSize="13sp"
        style="@style/cell_useritem_giftvalue"
        />
    <com.ilikezhibo.ggzb.xiangmu.RoundImageView
        xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_portrait"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/default_head"
        imagecontrol:border_inside_color="@color/global_main_bg"
        imagecontrol:border_thickness="0.8dp"
        />
    <TextView
      android:id="@+id/txt_username"
      android:layout_marginLeft="2dp"
      android:layout_marginTop="0dp"
      android:layout_toRightOf="@id/user_portrait"
      android:maxLength="12"
      android:text="@string/userhome_nickname_default"
      style="@style/cell_useritem_username"
        android:textColor="@color/white"
      />
    <ImageView
        android:id="@+id/offical_tag_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_alignBottom="@+id/user_portrait"
        android:layout_alignRight="@+id/user_portrait"
        android:src="@drawable/official_tag_top"
        android:visibility="invisible"
         />

  </RelativeLayout>
</LinearLayout>