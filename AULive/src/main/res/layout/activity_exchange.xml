<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/graylight"
    >

    <include layout="@layout/jiesihuo_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearlayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_diamond"
                android:background="@drawable/my_diamond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:layout_toRightOf="@+id/image_diamond"
                android:id="@+id/my_diamond"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="我的钻石:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/text_exchange_diamond"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/my_diamond"
                android:layout_marginLeft="10dp"
                android:textColor="#ff0000"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_flower"
                android:background="@drawable/my_flower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:visibility="gone"/>

        <TextView
            android:layout_toRightOf="@+id/image_flower"
            android:id="@+id/my_flower"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="我的货币:"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_toRightOf="@+id/my_flower"
            android:id="@+id/text_exchange"
            android:textColor="#ff0000"
            android:textSize="40sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

