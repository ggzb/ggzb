            <RelativeLayout
                android:padding="8dp"
               android:layout_below="@+id/exchange_wx"
               android:background="@drawable/btn_exchange"
               android:id="@+id/exchange_zfb"
               android:layout_margin="10dp"
               android:layout_width="match_parent"
               android:layout_height="60dp"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/location2"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
           <ImageView
               android:layout_marginRight="20dp"
               android:id="@+id/zhifubao"
               android:background="@drawable/userinfo_aliay"
               android:layout_toLeftOf="@+id/location2"
               android:layout_width="60dp"
               android:layout_height="60dp"/>
           <TextView
               android:layout_toRightOf="@id/zhifubao"
               android:layout_centerVertical="true"
               android:text="支付宝"
               android:textSize="30sp"
               android:textColor="#000000"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </RelativeLayout>

            <RelativeLayout
                    android:padding="15dp"
                   android:layout_below="@+id/exchange_zfb"
                   android:background="@drawable/btn_exchange"
                   android:id="@+id/exchange_lianlian"
                   android:layout_margin="15dp"
                   android:layout_width="match_parent"
                   android:layout_height="60dp"
                    android:visibility="gone"
                >
                <TextView
                    android:id="@+id/location5"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
           <ImageView
               android:layout_marginRight="40dp"
               android:id="@+id/lianlian"
               android:background="@drawable/bank_card"
               android:layout_toLeftOf="@+id/location5"
               android:layout_width="60dp"
               android:layout_height="60dp"/>
           <TextView
               android:layout_toRightOf="@id/lianlian"
               android:layout_centerVertical="true"
               android:text="银行卡提现"
               android:textSize="20sp"
               android:textColor="#000000"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </RelativeLayout>


       <RelativeLayout
           android:padding="8dp"
           android:layout_below="@+id/exchange_zfb"
           android:background="@drawable/btn_exchange"
           android:id="@+id/exchange_diamond"
           android:layout_margin="10dp"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:visibility="gone"
           >
           <TextView
               android:id="@+id/location3"
               android:layout_centerInParent="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <ImageView
               android:layout_marginRight="20dp"
               android:id="@+id/diamond"
               android:layout_toLeftOf="@+id/location3"
               android:background="@drawable/exchange_diamond"
               android:layout_width="60dp"
               android:layout_height="60dp" />
           <TextView
               android:text="兑换钻石"
               android:textSize="30sp"
               android:textColor="#000000"
               android:layout_toRightOf="@+id/diamond"
               android:layout_centerVertical="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>

       <RelativeLayout
           android:layout_below="@+id/exchange_diamond"
           android:background="@drawable/btn_exchange"
           android:id="@+id/family"
           android:layout_margin="10dp"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:visibility="gone"
           >
           <TextView
               android:id="@+id/location4"
               android:layout_centerInParent="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

           <ImageView
               android:layout_marginRight="20dp"
               android:layout_centerVertical="true"
               android:id="@+id/fam"
               android:background="@drawable/family"
               android:layout_toLeftOf="@+id/location4"
               android:layout_width="50dp"
               android:layout_height="50dp"/>
           <TextView
               android:layout_toRightOf="@+id/fam"
               android:text="家族管理"
               android:textSize="30sp"
               android:textColor="#000000"
               android:layout_centerVertical="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </RelativeLayout>

            <TextView
