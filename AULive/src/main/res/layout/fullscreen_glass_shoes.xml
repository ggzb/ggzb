<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/room_full_screen_gift_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
  <RelativeLayout
      android:id="@+id/glass_shoes_ly"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="150dp"
      android:visibility="gone"
      >

    <ImageView
        android:id="@+id/crown_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/glass_shoes"
        />
    <ImageView
        android:id="@+id/shine_star_on_shoes_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/crown_iv"
        android:layout_alignRight="@+id/crown_iv"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="-20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/shine_star_on_shoes"
        android:visibility="gone"

        />

    <ImageView
        android:id="@+id/shoes_star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/crown_iv"
        android:layout_alignLeft="@+id/crown_iv"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="-5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/shoes_star1"
        android:visibility="gone"

        />
    <ImageView
        android:id="@+id/shoes_star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/crown_iv"
        android:layout_alignLeft="@+id/crown_iv"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/shoes_star2"
        android:visibility="gone"

        />

    <ImageView
      android:id="@+id/shoes_star3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/crown_iv"
      android:layout_alignRight="@+id/crown_iv"
      android:layout_marginTop="15dp"
      android:layout_marginRight="20dp"
      android:scaleType="fitCenter"
      android:src="@drawable/shoes_star3"
        android:visibility="gone"

        />

    <ImageView
        android:id="@+id/shoes_angle1"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/crown_iv"
        android:layout_alignLeft="@+id/crown_iv"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="-70dp"
        android:scaleType="fitCenter"
        android:src="@drawable/shoes_angle1"
        android:visibility="gone"

        />

    <ImageView
    android:id="@+id/shoes_angle2"
    android:layout_width="120dp"
    android:layout_height="90dp"
    android:layout_alignTop="@+id/crown_iv"
    android:layout_alignRight="@+id/crown_iv"
    android:layout_marginTop="105dp"
    android:layout_marginRight="20dp"
    android:scaleType="fitCenter"
    android:src="@drawable/shoes_angle2"
        android:visibility="gone"

        />

    <ImageView
        android:id="@+id/shoes_angle3"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/crown_iv"
        android:layout_alignRight="@+id/crown_iv"
        android:layout_marginTop="15dp"
        android:layout_marginRight="-60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/shoes_angle3"
        android:visibility="gone"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="32.0dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >

      <ImageView
          android:id="@+id/car_one_redpoint"
          android:layout_width="12.0dip"
          android:layout_height="12.0dip"
          android:layout_gravity="center_vertical"
          android:scaleType="fitCenter"
          android:src="@drawable/gift_common_redpoint"
          />

      <TextView
          android:id="@+id/room_gift_car_one_send_person"
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:ellipsize="middle"
          android:gravity="center_vertical"
          android:shadowColor="@color/room_gift_text_shadow"
          android:shadowDx="2.0"
          android:shadowDy="2.0"
          android:shadowRadius="1.0"
          android:singleLine="true"
          android:text="bigèµ "
          android:textColor="@android:color/white"
          android:textSize="16.0sp"
          />
    </LinearLayout>
  </RelativeLayout>
</RelativeLayout>
