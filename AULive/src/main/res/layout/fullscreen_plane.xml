          android:layout_alignParentTop="true"
          android:layout_marginLeft="51.5dip"
          android:layout_marginTop="120.8dip"
          android:scaleType="fitCenter"
          android:src="@drawable/plane_airscrew"
          />

      <ImageView
          android:id="@+id/plane_right_airscrew"
          android:layout_width="20.0dip"
          android:layout_height="20.0dip"
          android:layout_alignParentBottom="true"
          android:layout_marginLeft="70.5dp"
          android:layout_marginStart="65dp"
          android:layout_marginBottom="20dp"
          android:layout_toEndOf="@+id/plane_left_airscrew"
          android:layout_toRightOf="@+id/plane_left_airscrew"
          android:scaleType="fitCenter"
          android:src="@drawable/plane_airscrew"
          />
    </RelativeLayout>
  </RelativeLayout>
</RelativeLayout>