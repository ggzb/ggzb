<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/room_full_screen_gift_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
  <RelativeLayout
      android:id="@+id/island_ly"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      >

    <ImageView
        android:id="@+id/island_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/island_bg"
        android:scaleType="fitCenter"
        />
    <ImageView
        android:id="@+id/island_moon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="-30dp"
        android:layout_marginTop="-40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/island_moon"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/island_cloud1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:scaleType="fitCenter"
        android:src="@drawable/island_cloud1"
        android:visibility="gone"

        />

    <ImageView
        android:id="@+id/island_cloud2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:layout_marginTop="45dp"
        android:scaleType="fitCenter"
        android:src="@drawable/island_cloud2"
        android:visibility="gone"

        />

    <ImageView
        android:id="@+id/island_cloud3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="95dp"
        android:scaleType="fitCenter"
        android:src="@drawable/island_cloud3"
        android:visibility="gone"

        />
    <ImageView
        android:id="@+id/island_cloud4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-20dp"
        android:layout_marginTop="95dp"
        android:scaleType="fitCenter"
        android:src="@drawable/island_cloud4"
        android:visibility="gone"

        />


    <ImageView
        android:id="@+id/island_meteor1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/island_meteor"
        android:visibility="gone"

        />
    <ImageView
        android:id="@+id/island_meteor2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/island_meteor"
        android:visibility="gone"

        />
    <ImageView
        android:id="@+id/island_meteor3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="150dp"
        android:scaleType="fitCenter"
        android:src="@drawable/island_meteor"
        android:visibility="gone"

        />
    <ImageView
        android:id="@+id/island_meteor4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/island_meteor"
        android:visibility="gone"

        />
    <ImageView
        android:id="@+id/island_meteor5"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/island_meteor"
        android:visibility="gone"

        />
    <ImageView
        android:id="@+id/island_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-150dp"
        android:scaleType="fitCenter"
        android:src="@drawable/island_light"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/island_angle_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        >
      <ImageView
          android:id="@+id/island_wings"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:scaleType="fitCenter"
          android:src="@drawable/island_wing1"
          />
      <ImageView
          android:id="@+id/island_angle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="78dp"
          android:layout_marginTop="50dp"
          android:scaleType="fitCenter"
          android:src="@drawable/island_angle"
          />
    </RelativeLayout>

    <ImageView
        android:id="@+id/island_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/island_star"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/island_star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:layout_marginTop="150dp"
        android:scaleType="fitCenter"
        android:src="@drawable/island_star"
        android:visibility="gone"
        />


    <ImageView
        android:id="@+id/island_island1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:layout_marginLeft="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/island_middle"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/island_island2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="250dp"
        android:layout_marginRight="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/island_little"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/island_island3"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/island_main"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="wrap_content"
        android:layout_height="32.0dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        >

      <ImageView
          android:id="@+id/car_one_redpoint"
          android:layout_width="12.0dip"
          android:layout_height="12.0dip"
          android:layout_gravity="center_vertical"
          android:scaleType="fitCenter"
          android:src="@drawable/gift_common_redpoint"
          />

      <TextView
          android:id="@+id/room_gift_car_one_send_person"
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:ellipsize="middle"
          android:gravity="center_vertical"
          android:shadowColor="@color/room_gift_text_shadow"
          android:shadowDx="2.0"
          android:shadowDy="2.0"
          android:shadowRadius="1.0"
          android:singleLine="true"
          android:text="bigèµ "
          android:textColor="@android:color/white"
          android:textSize="16.0sp"
          />
    </LinearLayout>
  </RelativeLayout>
</RelativeLayout>
