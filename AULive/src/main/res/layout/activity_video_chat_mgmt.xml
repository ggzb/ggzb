<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeeee"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/jiesihuo_title" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_accept_vchat"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/list_item_selector">


        <TextView
            android:id="@+id/tv_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="接受在线视频聊天"
            android:textSize="16sp" />


        <CheckBox
            android:id="@+id/cb_accept_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:background="@drawable/big_small_pic_selector"
            android:button="@null"
            android:checked="true" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/marging_line" />

    <RelativeLayout
        android:id="@+id/rl_vchat_cert"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:background="@drawable/list_item_selector">


        <TextView
            android:id="@+id/tv_cert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="视频认证"
            android:textSize="16sp" />

        <Button
            android:id="@+id/bt_cert"
            android:layout_width="10dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:background="@drawable/mm_submenu"
            android:textColor="#ffffffff"
            android:textSize="11sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:background="@color/marging_line" />

    <RelativeLayout
        android:id="@+id/rl_vchat_cond"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/list_item_selector">


        <TextView
            android:id="@+id/tv_cond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="视频聊天条件"
            android:textSize="16sp" />


        <Button
            android:id="@+id/btn_cond"
            android:layout_width="10dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:background="@drawable/mm_submenu"
            android:textColor="#ffffffff"
            android:textSize="11sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/marging_line" />

    <RelativeLayout
        android:id="@+id/rl_appt"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:background="@drawable/list_item_selector">


        <TextView
            android:id="@+id/item_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="预约聊天"
            android:textSize="16sp" />


        <Button
            android:id="@+id/topRightBtn"
            android:layout_width="10dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:background="@drawable/mm_submenu"
            android:textColor="#ffffffff"
            android:textSize="11sp" />

    </RelativeLayout>

</LinearLayout>