<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/room_gold_count_container_base"
    >
  <TextView
      android:id="@+id/txt_gold_count_tip"
      android:layout_marginLeft="10dp"
      android:paddingLeft="0.0dip"
      android:text="@string/app_money"
      android:textColor="@color/global_main_bg"
      style="@style/setting_item_lefttext"
      />
  <TextView
      android:id="@+id/txt_gold_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="-8dp"
      android:background="@drawable/onetoone_glod_count"
      android:paddingLeft="15.0dip"
      android:gravity="center_vertical"
      android:singleLine="true"
      android:text="999999"
      android:textColor="@color/white"
      android:textSize="15sp"
      />
</LinearLayout>