<?xml version="1.0" encoding="utf-8"?>
<!--android:background="@drawable/home_top_color_shape"-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
  <LinearLayout
      android:id="@+id/my_text_ll"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的"
        android:textSize="14sp"
        android:textColor="#FFFFFFFF"/>
  </LinearLayout>
  <RelativeLayout
      android:id="@id/chat_layout"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      android:layout_marginRight="10dp"
      android:layout_marginTop="10dp"
      style="@style/userhome_title_bar"
      android:visibility="gone"
      >



    <ImageButton
        android:id="@+id/ib_chat_enter"
        android:layout_width="30dp"
        android:layout_height="30.0dip"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_actionbar_item"
        android:contentDescription="@string/app_name"
        android:src="@drawable/hallchatenter"
        />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="1.0dip"
        android:layout_marginTop="1.0dip"
        >
      <com.ilikezhibo.ggzb.views.BadgeView
          android:id="@+id/hallunread"
          android:layout_width="15.0dip"
          android:layout_height="15.0dip"
          android:text="9"
          android:textSize="12.0sp"
          />
    </FrameLayout>
  </RelativeLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/friend_oper_container"
      android:layout_below="@+id/my_text_ll"
      android:layout_marginBottom="0dp"
      android:orientation="vertical"
      android:gravity="center"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/marging_line"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        >


      <LinearLayout
          android:id="@+id/item_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:orientation="horizontal"
          >
      <LinearLayout
          android:id="@+id/item_layout2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:orientation="horizontal"
          android:layout_weight="1"
          >

        <com.ilikezhibo.ggzb.xiangmu.RoundImageView
            xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
            android:id="@+id/my_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            imagecontrol:border_inside_color="@color/global_main_bg"
            imagecontrol:border_thickness="1.5dp"
            android:layout_marginLeft="50dp"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ib_modify_contain"
            android:layout_width="50dp"
            android:gravity="right"
            android:visibility="visible"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:paddingRight="1dp"
            android:layout_height="match_parent">

          <ImageButton
              android:id="@+id/ib_modify"
              android:layout_width="30.0dip"
              android:layout_height="30.0dip"
              android:layout_gravity="right"
              android:background="@drawable/bg_actionbar_item"
              android:contentDescription="@string/app_name"
              android:src="@drawable/my_modify"
              />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginTop="8dp"
          android:layout_below="@+id/item_layout"
          android:orientation="vertical"
          android:layout_gravity="center_horizontal"
          >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >
          <LinearLayout
              android:id="@+id/name_ly"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:gravity="center"
              android:orientation="horizontal"
              >

            <TextView
                android:id="@+id/id_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLength="12"
                android:text="飘客001"
                android:textColor="@color/white"
                android:textSize="15sp"
                />

            <ImageView
                android:id="@+id/sex_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="4.1dp"
                android:src="@drawable/userinfo_male"
                />
            <RelativeLayout
                android:id="@+id/grade_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="1.5dp"
                android:background="@drawable/icon_medal_32_1"
                android:gravity="center_vertical"
                android:visibility="gone"
                >
              <TextView
                  android:id="@+id/grade_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentTop="true"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="3dp"
                  android:gravity="center"
                  android:singleLine="true"
                  android:text="130"
                  android:textColor="@color/white"
                  android:textSize="12sp"
                  />
            </RelativeLayout>
            <ImageView
                android:id="@+id/offical_tag_iv"
                android:layout_width="34dp"
                android:layout_height="18dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/official_tag_chat"
                android:visibility="gone"
                />
          </LinearLayout>
          <LinearLayout
              android:id="@+id/chat_medal_ly"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
            <include
                layout="@layout/medal_gif_chat_ly"
                android:id="@+id/gif_iv1"
                android:visibility="gone"
                />
            <include
                layout="@layout/medal_gif_chat_ly"
                android:id="@+id/gif_iv2"
                android:visibility="gone"
                />
            <include
                layout="@layout/medal_gif_chat_ly"
                android:id="@+id/gif_iv3"
                android:visibility="gone"
                />
            <include
                layout="@layout/medal_gif_chat_ly"
                android:id="@+id/gif_iv4"
                android:visibility="gone"
                />
            <include
                layout="@layout/medal_gif_chat_ly"
                android:id="@+id/gif_iv5"
                android:visibility="gone"
                />
            <include
                layout="@layout/medal_gif_chat_ly"
                android:id="@+id/gif_iv6"
                android:visibility="gone"
                />
            <include
                layout="@layout/medal_gif_chat_ly"
                android:id="@+id/gif_iv7"
                android:visibility="gone"
                />
            <include
                layout="@layout/medal_gif_chat_ly"
                android:id="@+id/gif_iv8"
                android:visibility="gone"
                />
          </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
        <TextView
            android:id="@+id/id_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="ID=11111"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_weight="1"
            android:gravity="right|bottom"
            android:paddingRight="8dp"
            />
          <TextView
              android:id="@+id/txt_account_inout"
              android:layout_marginLeft="10dp"
              android:layout_weight="1"
              android:layout_centerVertical="true"
              android:text="@string/userhome_account_inout_default"
              style="@style/userhome_desc_txt"
              android:gravity="left|bottom"
              android:textSize="13sp"
              android:paddingLeft="8dp"
              android:layout_width="match_parent"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1">
            <TextView
                android:id="@+id/guanzhu_value_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="0.5pt"
              android:layout_height="match_parent"
              android:layout_marginTop="2dp"
              android:background="#22FFFFFF">
            </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1">
            <TextView
                android:id="@+id/fans_value_tv"
                android:layout_weight="1"
                android:text="0"
                style="@style/userhome_desc_txt"
                android:gravity="center"
                android:layout_width="match_parent"
                android:textSize="16sp"
                />
          </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
          <LinearLayout
              android:id="@+id/btn_followings"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_weight="1">
            <TextView
                android:id="@+id/txt_followings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="0.5pt"
              android:layout_height="match_parent"
              android:layout_marginBottom="2pt"
              android:background="#22FFFFFF">
          </LinearLayout>
          <LinearLayout
              android:id="@+id/btn_fans"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_weight="1">
            <TextView
                android:id="@+id/txt_fans"
                android:text="粉丝"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
          </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_verify_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/icon_chat_v"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="微博认证：骚男，产品经理"
            android:textColor="@color/gold_color"
            android:textSize="14.0sp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/txt_desc"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            style="@style/userhome_desc_real_txt"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/account_inout_container"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            style="@style/userhome_account_inout_container"
            android:visibility="gone"
            >

          <ImageView
              android:id="@id/img_balance_icon"
              android:contentDescription="@string/app_name"
              style="@style/userhome_balance_icon_img"
              />
          <Button
              android:id="@+id/btn_manage_inuser"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="50.0dip"
              android:background="@drawable/bg_actionbar_item"
              android:text="管理"
              android:textColor="@color/white"
              android:textSize="16.0sp"
              android:visibility="gone"
              />
        </LinearLayout>

      </LinearLayout>

      <TextView
          android:id="@+id/item_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginRight="20dp"
          android:layout_toLeftOf="@+id/topRightBtn"
          android:text="有新匹配"
          android:textSize="20sp"
          android:visibility="gone"
          />

      <Button
          android:id="@+id/topRightBtn"
          android:layout_width="14dp"
          android:layout_height="15dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="20dip"
          android:background="@drawable/mm_submenu"
          android:textColor="#ffffffff"
          android:textSize="11sp"
          android:visibility="gone"
          />
    </RelativeLayout>
  </LinearLayout>

  <View
      android:layout_above="@+id/piaopiao_gongxian_bang"
      android:layout_marginBottom="0dp"
      android:layout_marginTop="0dp"
      style="@style/userhome_head_info_line"
      android:visibility="gone"
      />
  <RelativeLayout
      android:id="@+id/piaopiao_gongxian_bang"
      android:layout_width="match_parent"
      android:layout_height="5dp"
      android:layout_above="@+id/friend_oper_container"
      android:layout_gravity="center_vertical"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="10dp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:visibility="gone"
      >
    <com.ilikezhibo.ggzb.xiangmu.RoundImageView
        xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
        android:id="@+id/piaopiap_top1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/me_qiuzhan"
        android:visibility="gone"
        />
    <com.ilikezhibo.ggzb.xiangmu.RoundImageView
        xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
        android:id="@+id/piaopiap_top2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/piaopiap_top1"
        android:src="@drawable/me_qiuzhan"
        android:visibility="gone"
        />
    <com.ilikezhibo.ggzb.xiangmu.RoundImageView
        xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
        android:id="@+id/piaopiap_top3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/piaopiap_top2"
        android:src="@drawable/me_qiuzhan"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_piaopiapTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:layout_weight="1"
        android:gravity="right"
        android:text="贡献榜"
        android:textColor="@color/white"
        android:textSize="15dp"
        />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:src="@drawable/me_go_room_money"
        />
  </RelativeLayout>
  <LinearLayout
      android:id="@+id/friend_oper_container"
      style="@style/friend_oper_container"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:visibility="gone"
      >

    <RelativeLayout
        android:id="@+id/btn_followings_old"
        style="@style/friend_oper_btn"
        >
      <TextView
          android:id="@+id/txt_followings_old"
          android:text="@string/userhome_follows_num_default"
          android:textSize="15sp"
          style="@style/userhead_text_fans"
          />
    </RelativeLayout>
    <View
        android:id="@+id/line_lives"
        style="@style/friend_oper_line"
        />
    <RelativeLayout
        android:id="@+id/btn_fans_old"
        style="@style/friend_oper_btn"
        >
      <TextView
          android:id="@+id/txt_fans_old"
          android:text="@string/userhome_fans_num_default"
          android:textSize="15sp"
          style="@style/userhead_text_fans"
          />
    </RelativeLayout>
    <View
        android:id="@+id/line_fans"
        style="@style/friend_oper_line"
        />
    <RelativeLayout
        android:id="@+id/btn_lives"
        style="@style/friend_oper_btn"
        >
      <TextView
          android:id="@+id/txt_lives"
          android:text="@string/userhome_lives_num_default"
          android:textSize="15sp"
          style="@style/userhead_text_fans"
          />
    </RelativeLayout>

  </LinearLayout>

</RelativeLayout>

