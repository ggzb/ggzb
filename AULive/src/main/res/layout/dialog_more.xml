<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="5dp">


    <TextView
        android:id="@+id/more_lahei"
        style="@style/more_textstyle"
        android:background="@drawable/more_first_selector"
        android:text="拉黑" />


    <View
        android:layout_width="50dp"

        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/more_lahei"
        android:layout_height="1dp"
        android:background="@color/global_main_bg" />


    <TextView
        android:layout_alignLeft="@+id/more_lahei"
        android:layout_alignRight="@+id/more_lahei"
        android:layout_below="@id/more_lahei"
        android:id="@+id/more_report"
        style="@style/more_textstyle"
        android:textColor="@color/black"
        android:background="@drawable/more_middle_selector"
        android:text="举报" />
    <View
        android:layout_width="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/more_report"
        android:layout_height="1dp"
        android:background="@color/global_main_bg" />

    <TextView
        android:layout_alignLeft="@+id/more_lahei"
        android:layout_alignRight="@+id/more_lahei"
        android:layout_below="@id/more_report"
        android:id="@+id/more_cancel"
        style="@style/more_textstyle"
        android:background="@drawable/more_last_selector"
        android:text="取消" />

</RelativeLayout>
