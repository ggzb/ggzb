<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="top"
    android:background="@color/reg_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/jiesihuo_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            android:src="@drawable/step_main_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/step_shihuo_ly"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/list_item_selector"
                android:gravity="center|top"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/step_shihuo_tv"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/step_main_kaifa"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:textSize="40sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/step_xiangmu_ly"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/list_item_selector"
                android:gravity="center|top"
                android:orientation="vertical" >

                <TextView
                      android:id="@+id/step_xiangmu_tv"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/step_main_faxiangmu"
                    android:gravity="center"
                    android:textSize="40sp" />
            </LinearLayout>
        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
            </LinearLayout>
    </LinearLayout>

</LinearLayout>