<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/av_page1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <Button android:id="@+id/host_redbag_bt"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:background="@drawable/host_redbag"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="80dp"
      android:visibility="gone"
      />
  <include
      layout="@layout/onetoone_bottom_bar"
      android:id="@+id/qav_bottom_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      />
  <master.flame.danmaku.ui.widget.DanmakuView
      android:id="@+id/danmakuView"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:layout_alignParentBottom="true"
      android:layout_gravity="bottom"
      android:layout_marginBottom="50dp"
      android:background="@color/red"
      />
  <include
      layout="@layout/onetoone_top_bar"
      android:id="@+id/qav_top_bar_new"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_marginRight="8dp"
      android:layout_marginTop="12dp"
      />

  <tyrantgit.widget.HeartLayout
      android:id="@+id/heart_layout"
      android:layout_width="135dp"
      android:layout_height="match_parent"
      android:layout_alignParentRight="true"
      android:layout_marginBottom="47dp"
      />


  <LinearLayout
      android:id="@+id/enter_room_effect_ly"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="200dp"
      android:background="@drawable/enter_room_1"
      android:gravity="center_horizontal|bottom"
      android:orientation="vertical"
      android:visibility="gone"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/enter_room_effect"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="5.5dp"
          android:ellipsize="marquee"
          android:lines="1"
          android:maxWidth="220dp"
          android:text="一道闪光‘bigbig666’进入直播间"
          android:textColor="@color/yellow"
          android:textSize="16sp"
          android:textStyle="bold"
          />
    </LinearLayout>

  </LinearLayout>

</RelativeLayout>