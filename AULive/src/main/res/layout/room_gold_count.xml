<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/room_gold_count_container_base"
    android:background="@drawable/room_piaopiao_back"
    >
  <TextView
      android:id="@+id/txt_gold_count_tip"
      android:paddingLeft="0.0dip"
      android:text="@string/app_money"
      android:textColor="@color/global_main_bg"
      style="@style/setting_item_lefttext"
      android:layout_marginLeft="10dp"
      />
  <TextView
      android:id="@+id/txt_gold_count"
      android:layout_marginLeft="5.0dip"
      android:paddingLeft="0.0dip"
      android:text="0"
      android:textColor="@color/white"
      android:singleLine="true"
      style="@style/setting_item_lefttext"
      />
  <ImageView
      android:id="@+id/img_balance_icon"
      android:layout_width="12.0sp"
      android:layout_height="12.0sp"
      android:layout_marginLeft="10.0dip"
      android:layout_marginRight="8.0dip"
      android:contentDescription="@string/app_name"
      android:scaleType="fitXY"
      android:src="@drawable/me_go_room_money"
      />
</LinearLayout>