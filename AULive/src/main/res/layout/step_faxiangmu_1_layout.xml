<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/reg_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/jiesihuo_title" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#7f999999" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40.1dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="项目名称"
                            android:textColor="#7f999999"
                            android:textSize="15.1sp" />

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:background="#7f999999" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/title_et"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:gravity="center|left"
                        android:hint="例 :android视频聊天开发"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="15.2sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#7f999999" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40.1dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:gravity="center|right" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="预算"
                            android:textColor="#7f999999"
                            android:textSize="15.1sp" />

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:background="#7f999999" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/bugget_money"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:hint="例:50000"
                        android:maxLength="7"
                        android:inputType="numberSigned"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="15.2sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="元"
                        android:textColor="@color/pink"
                        android:textSize="17sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#7f999999" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40.1dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:gravity="center|right" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="类别"
                            android:textColor="#7f999999"
                            android:textSize="15.1sp" />

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:background="#7f999999" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:hint="请选择"
                        android:maxLines="7"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="15.2sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#7f999999" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:gravity="center|right" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="需求描述"
                            android:textColor="#7f999999"
                            android:textSize="15.1sp" />

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:background="#7f999999" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/detail_des"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ellipsize="end"
                        android:minHeight="90dp"
                        android:gravity="center|left"
                        android:hint="例：聊天功能,视频功能,支付板块"
                        android:paddingLeft="10dp"
                        android:maxLines="200"
                        android:textColor="@color/black"
                        android:textSize="15.2sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#7f999999" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="40.1dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:gravity="center|right" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="完成时间"
                            android:textColor="#7f999999"
                            android:textSize="15.1sp" />

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:background="#7f999999" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/need_time"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:hint="例:3个月"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:maxLength="2"
                        android:textColor="@color/black"
                        android:textSize="15.2sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="个月"
                        android:textColor="@color/pink"
                        android:textSize="17sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#7f999999" />

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center|right" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加附件:"
                        android:textColor="#7f999999"
                        android:textSize="15.1sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/photo_layout1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="12.0dip"
                        android:paddingLeft="16.0dip"
                        android:paddingRight="16.0dip"
                        android:paddingTop="12.0dip" >

                        <com.ilikezhibo.ggzb.step.NoScrollGridView
                            android:id="@+id/froum_create_grid"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:cacheColorHint="#00000000"
                            android:gravity="fill"
                            android:horizontalSpacing="16.0dip"
                            android:listSelector="#00000000"
                            android:numColumns="4"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="12.0dip" />

                        <RelativeLayout
                            android:id="@+id/addphoto_layout2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:clickable="false"
                            android:focusable="true"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical" >

                            <ImageView
                                android:id="@+id/addphoto_img"
                                android:layout_width="60.0dip"
                                android:layout_height="60.0dip"
                                android:clickable="true"
                                android:src="@drawable/btn_photo_add" />

                            <TextView
                                android:id="@+id/add_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10.0dip"
                                android:layout_toRightOf="@id/addphoto_img"
                                android:text="添加照片"
                                android:textColor="#ffa3a3a2"
                                android:textSize="14.0sp" />

                            <Button
                                android:id="@+id/publishThemeVoiceBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_alignBottom="@id/addphoto_img"
                                android:layout_marginLeft="15dp"
                                android:layout_toRightOf="@id/add_tv"
                                android:background="@drawable/ondate_upload_bg_kuan"
                                android:drawableLeft="@drawable/ondate_voice_icon"
                                android:drawablePadding="5dp"
                                android:gravity="center"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="添加语音"
                                android:textColor="#ff5b90"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/photo_layout3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="12.0dip"
                        android:paddingLeft="16.0dip"
                        android:paddingRight="16.0dip"
                        android:paddingTop="12.0dip" >

                        <com.ilikezhibo.ggzb.step.NoScrollGridView
                            android:id="@+id/file_grid"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:cacheColorHint="#00000000"
                            android:gravity="fill"
                            android:horizontalSpacing="16.0dip"
                            android:listSelector="#00000000"
                            android:numColumns="4"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="12.0dip" />

                        <RelativeLayout
                            android:id="@+id/addfile_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:clickable="false"
                            android:focusable="true"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical" >

                            <ImageView
                                android:id="@+id/addfile_img"
                                android:layout_width="60.0dip"
                                android:layout_height="60.0dip"
                                android:clickable="true"
                                android:src="@drawable/btn_photo_add" />

                            <TextView
                                android:id="@+id/add_file_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10.0dip"
                                android:layout_toRightOf="@id/addfile_img"
                                android:text="添加附件"
                                android:textColor="#ffa3a3a2"
                                android:textSize="14.0sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#7f999999" />
            </LinearLayout>

            <Button
                android:id="@+id/reg_bt"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_selector"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>