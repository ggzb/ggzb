<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_bg_ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <Button
      android:id="@+id/back_btn"
      android:layout_width="35dp"
      android:layout_height="35dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginLeft="13dp"
      android:layout_marginTop="15dp"
      android:background="@drawable/back_selector"
      android:paddingRight="5dp"
      android:textColor="@color/white"
      />

  <Button
      android:id="@+id/more_btn"
      android:layout_width="35dp"
      android:layout_height="35dp"
      android:layout_alignParentRight="true"
      android:layout_marginRight="13dp"
      android:layout_marginTop="15dp"
      android:background="@drawable/more_icon"
      android:paddingLeft="5dp"
      />


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginBottom="30dp"
      android:layout_above="@+id/piaopiao_gongxian_bang"
      >

    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >


      <RelativeLayout
          android:id="@id/chat_layout"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:layout_marginRight="10dp"
          android:layout_marginTop="10dp"
          android:visibility="gone"
          style="@style/userhome_title_bar"
          >
        <ImageButton
            android:id="@+id/ib_chat_enter"
            android:layout_width="49.0dip"
            android:layout_height="48.0dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_actionbar_item"
            android:contentDescription="@string/app_name"
            android:src="@drawable/hallchatenter"
            />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1.0dip"
            android:layout_marginTop="1.0dip"
            >
          <com.ilikezhibo.ggzb.views.BadgeView
              android:id="@+id/hallunread"
              android:layout_width="15.0dip"
              android:layout_height="15.0dip"
              android:text="9"
              android:textSize="12.0sp"
              />
        </FrameLayout>
      </RelativeLayout>


      <LinearLayout
          android:id="@+id/item_layout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:layout_marginLeft="20dp"
          android:orientation="vertical"
          android:padding="3dp"
          >
        <com.ilikezhibo.ggzb.xiangmu.RoundImageView
            xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
            android:id="@+id/my_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            imagecontrol:border_inside_color="@color/whitesmoke"
            imagecontrol:border_thickness="1.5dp"
            />
      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginTop="20dp"
          android:layout_toRightOf="@+id/item_layout"
          android:orientation="vertical"
          >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <LinearLayout
            android:id="@+id/name_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

          <TextView
              android:id="@+id/id_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:lines="1"
              android:maxWidth="150dp"
              android:text="飘客001"
              android:textColor="@color/white"
              android:textSize="15sp"
              />

          <ImageView
              android:id="@+id/sex_iv"
              android:layout_width="15dp"
              android:layout_height="15dp"
              android:layout_marginLeft="4.1dp"
              android:src="@drawable/userinfo_male"
              />
          <RelativeLayout
              android:id="@+id/grade_ly"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="3dp"
              android:layout_marginTop="1.5dp"
              android:background="@drawable/icon_medal_32_1"
              android:gravity="center_vertical"
              >
            <TextView
                android:id="@+id/grade_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="130"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
          </RelativeLayout>
          <ImageView
              android:id="@+id/offical_tag_iv"
              android:layout_width="34dp"
              android:layout_height="18dp"
              android:layout_marginLeft="1dp"
              android:layout_marginRight="3dp"
              android:layout_marginTop="2dp"
              android:src="@drawable/official_tag_chat"
              android:visibility="gone"
              />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/chat_medal_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
          <include
              layout="@layout/medal_gif_chat_ly"
              android:id="@+id/gif_iv1"
              android:visibility="gone"
              />
          <include
              layout="@layout/medal_gif_chat_ly"
              android:id="@+id/gif_iv2"
              android:visibility="gone"
              />
          <include
              layout="@layout/medal_gif_chat_ly"
              android:id="@+id/gif_iv3"
              android:visibility="gone"
              />
          <include
              layout="@layout/medal_gif_chat_ly"
              android:id="@+id/gif_iv4"
              android:visibility="gone"
              />
          <include
              layout="@layout/medal_gif_chat_ly"
              android:id="@+id/gif_iv5"
              android:visibility="gone"
              />
          <include
              layout="@layout/medal_gif_chat_ly"
              android:id="@+id/gif_iv6"
              android:visibility="gone"
              />
          <include
              layout="@layout/medal_gif_chat_ly"
              android:id="@+id/gif_iv7"
              android:visibility="gone"
              />
          <include
              layout="@layout/medal_gif_chat_ly"
              android:id="@+id/gif_iv8"
              android:visibility="gone"
              />
        </LinearLayout>

      </LinearLayout>

        <TextView
            android:id="@+id/id_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_ly"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/item_layout"
            android:text="ID=11111"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/txt_verify_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/icon_chat_v"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="微博认证：骚男，产品经理"
            android:textColor="@color/gold_color"
            android:textSize="14.0sp"
            />
        <TextView
            android:id="@+id/txt_desc"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            style="@style/userhome_desc_real_txt"
            />
        <LinearLayout
            android:id="@+id/account_inout_container"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            style="@style/userhome_account_inout_container"
            >
          <TextView
              android:id="@+id/txt_account_inout"
              android:text="@string/userhome_account_inout_default"
              style="@style/userhome_desc_txt"
              />
          <ImageView
              android:id="@id/img_balance_icon"
              android:contentDescription="@string/app_name"
              style="@style/userhome_balance_icon_img"
              />
          <Button
              android:id="@+id/btn_manage_inuser"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="50.0dip"
              android:background="@drawable/bg_actionbar_item"
              android:text="管理"
              android:textColor="@color/white"
              android:textSize="16.0sp"
              android:visibility="gone"
              />
        </LinearLayout>

      </LinearLayout>

      <TextView
          android:id="@+id/item_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginRight="20dp"
          android:layout_toLeftOf="@+id/topRightBtn"
          android:text="有新匹配"
          android:textSize="20sp"
          android:visibility="gone"
          />

      <Button
          android:id="@+id/topRightBtn"
          android:layout_width="14dp"
          android:layout_height="15dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="20dip"
          android:background="@drawable/mm_submenu"
          android:textColor="#ffffffff"
          android:textSize="11sp"
          android:visibility="invisible"
          />
    </RelativeLayout>


    <Button
        android:id="@+id/is_live_bt"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/main_btn_style"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="未直播"
        android:textColor="@drawable/release_viedo_text_selector"
        android:textSize="12sp"
        />
  </RelativeLayout>

  <View
      android:layout_marginBottom="0dp"
      android:layout_marginTop="0dp"
      style="@style/userhome_head_info_line"
      android:layout_above="@+id/piaopiao_gongxian_bang"
      />
  <RelativeLayout
      android:id="@+id/piaopiao_gongxian_bang"
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:layout_gravity="center_vertical"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="10dp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:layout_above="@+id/friend_oper_container"
      >
    <com.ilikezhibo.ggzb.xiangmu.RoundImageView
        xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
        android:id="@+id/piaopiap_top1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/me_qiuzhan"
        />
    <com.ilikezhibo.ggzb.xiangmu.RoundImageView
        xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
        android:id="@+id/piaopiap_top2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/piaopiap_top1"
        android:src="@drawable/me_qiuzhan"
        />
    <com.ilikezhibo.ggzb.xiangmu.RoundImageView
        xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
        android:id="@+id/piaopiap_top3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/piaopiap_top2"
        android:src="@drawable/me_qiuzhan"
        />
    <TextView
        android:id="@+id/tv_piaopiapTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:layout_weight="1"
        android:gravity="right"
        android:text="贡献榜"
        android:textColor="@color/white"
        android:textSize="15dp"
        />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:src="@drawable/me_go_room_money"
        />
  </RelativeLayout>
  <LinearLayout
      android:id="@+id/friend_oper_container"
      android:layout_marginTop="0dp"
      style="@style/friend_oper_container"
      android:layout_alignParentBottom="true"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      >

    <RelativeLayout
        android:id="@+id/btn_followings"
        style="@style/friend_oper_btn"
        >
      <TextView
          android:id="@+id/txt_followings"
          android:text="@string/userhome_follows_num_default"
          android:textSize="15sp"
          style="@style/userhead_text_fans"
          />
      <View
          android:id="@+id/fllow_line"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_alignParentBottom="true"
          android:background="@color/qqblue"
          />
    </RelativeLayout>
    <View
        android:id="@+id/line_lives"
        style="@style/friend_oper_line"
        />
    <RelativeLayout
        android:id="@+id/btn_fans"
        style="@style/friend_oper_btn"
        >
      <TextView
          android:id="@id/txt_fans"
          android:text="@string/userhome_fans_num_default"
          android:textSize="15sp"
          style="@style/userhead_text_fans"
          />
      <View
          android:id="@+id/fans_line"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_alignParentBottom="true"
          android:background="@color/qqblue"
          android:visibility="invisible"
          />
    </RelativeLayout>
    <View
        android:id="@+id/line_fans"
        style="@style/friend_oper_line"
        />
    <RelativeLayout
        android:id="@+id/btn_lives"
        style="@style/friend_oper_btn"
        >
      <TextView
          android:id="@+id/txt_lives"
          android:text="@string/userhome_lives_num_default"
          android:textSize="15sp"
          style="@style/userhead_text_fans"
          />

      <View
          android:id="@+id/lives_line"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_alignParentBottom="true"
          android:background="@color/qqblue"
          android:visibility="invisible"
          />

    </RelativeLayout>

  </LinearLayout>
</RelativeLayout>
