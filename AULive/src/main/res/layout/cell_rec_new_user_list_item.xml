<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="70dp"
    android:minHeight="70dp"
    android:layout_width="match_parent"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/rank_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:text="4"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="#666666"
        android:gravity="left"
        android:textSize="13sp"
        android:layout_marginRight="10dp"
        android:visibility="visible"
        />

    <RelativeLayout
        android:id="@+id/rl_photo"
        android:layout_centerVertical="true"
        android:layout_marginLeft="45dp"
        android:layout_width="50dp"
        android:layout_height="50dp">
        <com.ilikezhibo.ggzb.xiangmu.RoundImageView
            xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/default_head"
            imagecontrol:border_thickness="0dp"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/image_grade"
            android:layout_width="15dp"
            android:layout_height="15dp"

            android:background="@drawable/icon_medal_32_1"
            android:gravity="center_vertical"
            >
        </ImageView>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rl_photo"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:textColor="#333333"
        android:text="我是说"/>

    <TextView
        android:textColor="#999999"
        android:textSize="13sp"
        android:text="送出12344"
        android:layout_toRightOf="@id/rl_photo"
        android:layout_below="@id/txt_username"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:id="@+id/txt_info"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_circle_rectangle_pink"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="#e482ec"
        android:id="@+id/txt_follow"
        android:text="关 注"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:textSize="15sp"/>
    <LinearLayout
        android:layout_marginLeft="45dp"
        android:id="@+id/lineLayout"
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"

        android:background="@color/marging_line" />
</RelativeLayout>