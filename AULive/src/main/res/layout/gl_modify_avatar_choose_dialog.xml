<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#aa000000"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button_one"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_marginTop="2dp"
        android:background="@null"
        android:text="设置默认背景图片"
        android:textColor="@drawable/dialog_item_selector"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/lineImg"
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:background="@color/black" >
    </LinearLayout>

    <Button
        android:id="@+id/againUpBtn"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_marginTop="2dp"
        android:background="@null"
        android:text="重新上传"
        android:textColor="@drawable/dialog_item_selector"
        android:textSize="20sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/againUpLineImg"
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:background="@color/black"
        android:visibility="gone" >
    </LinearLayout>

    <Button
        android:id="@+id/gl_choose_img"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_marginTop="2dp"
        android:background="@null"
        android:text="从手机图片库选择"
        android:textColor="@drawable/dialog_item_selector"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:background="@color/black" >
    </LinearLayout>

    <Button
        android:id="@+id/gl_choose_phone"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_marginTop="2dp"
        android:background="@null"
        android:text="相机拍摄"
        android:textColor="@drawable/dialog_item_selector"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:background="@color/black" >
    </LinearLayout>

    <Button
        android:id="@+id/deleteLocalBtn"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_marginTop="2dp"
        android:background="@null"
        android:text="删除"
        android:textColor="@drawable/dialog_item_selector"
        android:textSize="20sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/deleteLocalLineImg"
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

    <Button
        android:id="@+id/gl_choose_cancel"
        android:layout_width="280dp"
        android:layout_height="42dp"
        android:layout_marginTop="2dp"
        android:background="@null"
        android:text="取消"
        android:textColor="@drawable/dialog_item_selector"
        android:textSize="20sp" />

</LinearLayout>