<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/empty_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:maxLength="9"
            android:text="昵称"
            android:textColor="#ff595857"
            android:textSize="14.0sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="5dp"
            android:gravity="left"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/start1_iv"
                android:layout_width="15.1dp"
                android:layout_height="15.1dp"
                android:background="@drawable/comment_star_selector"
                android:button="@null"
                android:checked="false"
                android:clickable="false" />

            <CheckBox
                android:id="@+id/start2_iv"
                android:layout_width="15.1dp"
                android:layout_height="15.1dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/comment_star_selector"
                android:button="@null"
                android:checked="false"
                android:clickable="false" />

            <CheckBox
                android:id="@+id/start3_iv"
                android:layout_width="15.1dp"
                android:layout_height="15.1dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/comment_star_selector"
                android:button="@null"
                android:checked="false"
                android:clickable="false" />

            <CheckBox
                android:id="@+id/start4_iv"
                android:layout_width="15.1dp"
                android:layout_height="15.1dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/comment_star_selector"
                android:button="@null"
                android:checked="false"
                android:clickable="false" />

            <CheckBox
                android:id="@+id/start5_iv"
                android:layout_width="15.1dp"
                android:layout_height="15.1dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/comment_star_selector"
                android:button="@null"
                android:checked="false"
                android:clickable="false" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/comment_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="好好"
        android:textColor="#ff383c3c"
        android:textSize="14.0sp" />

</LinearLayout>