<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="false"
    android:gravity="center"
    >
  <View
      android:id="@+id/click_view"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:fitsSystemWindows="false"
      />
  <RelativeLayout
      android:id="@+id/root_view"
      android:layout_width="@dimen/room_userinfo_width"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_room_userinfodialog"
      android:paddingBottom="15.0dip"
      android:paddingTop="15.0dip"
      android:fitsSystemWindows="false"
     android:layout_centerInParent="true"
      android:elevation="10dp"
      >
    <RelativeLayout
        android:id="@+id/title_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5.0dip"
        android:paddingLeft="@dimen/room_userdialog_leftpadding"
        android:paddingRight="@dimen/room_userdialog_leftpadding"
        android:fitsSystemWindows="false"
        >
      <TextView
          android:id="@+id/img_report"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/img_close"
          android:layout_alignTop="@id/img_close"
          android:text="@string/room_roomuser_manage"
          android:textColor="@color/red"
          android:textSize="16.0sp"
          android:visibility="gone"
          />
      <ImageView
          android:id="@+id/img_close"
          android:layout_width="@dimen/room_userinfo_report_height"
          android:layout_height="@dimen/room_userinfo_report_height"
          android:layout_alignParentRight="true"
          android:src="@drawable/room_pop_up_shut"
          />
      <ImageView
          android:id="@+id/img_up_up"
          android:layout_width="@dimen/room_userinfo_report_height"
          android:layout_height="@dimen/room_userinfo_report_height"
          android:layout_alignParentRight="true"
          android:src="@drawable/room_pop_up_pack"
          android:visibility="gone"
          />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/user_portrait_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_container"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:fitsSystemWindows="false"
        >
      <LinearLayout
          android:id="@+id/user_portrait_layout"
          android:layout_width="97.0dip"
          android:layout_height="97.0dip"
          android:layout_centerHorizontal="true"
          android:background="@drawable/control_circle_bg"
          android:gravity="center"
          >
        <com.ilikezhibo.ggzb.xiangmu.RoundImageView
            xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_portrait"
            android:layout_width="85.0dip"
            android:layout_height="85.0dip"
            imagecontrol:border_inside_color="@color/global_main_bg"
            imagecontrol:border_thickness="1.5dp"
            />
      </LinearLayout>
      <ImageView
          android:id="@+id/img_user_type"
          android:layout_width="20.0dip"
          android:layout_height="20.0dip"
          android:layout_alignBottom="@id/user_portrait_layout"
          android:layout_alignRight="@id/user_portrait_layout"
          android:layout_marginBottom="6.0dip"
          android:layout_marginRight="6.0dip"
            />

      <TextView
          android:id="@+id/tv_lianmai"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
           android:layout_toRightOf="@id/user_portrait_layout"
           android:layout_centerVertical="true"
          android:layout_marginLeft="26.0dip"
          android:gravity="center"
          android:textColor="@color/global_main_bg"
          android:textSize="18sp"
           android:text="连麦"
          android:visibility="gone"
          />
      <LinearLayout
          android:id="@+id/mvp_layout"
          android:layout_width="44.0dip"
          android:layout_height="44.0dip"
          android:layout_alignRight="@id/user_portrait_layout"
          android:layout_alignTop="@id/user_portrait_layout"
          android:layout_marginRight="117.0dip"
          android:layout_marginTop="33.0dip"
          android:background="@drawable/control_circle_bg"
          android:gravity="center"

          >
        <com.ilikezhibo.ggzb.xiangmu.RoundImageView
            xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mvp_portrait"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            android:src="@drawable/default_head"
            imagecontrol:border_inside_color="@color/global_main_bg"
            imagecontrol:border_thickness="0.5dp"
            android:visibility="invisible"
            />
      </LinearLayout>
      <View
          android:id="@+id/circle_to_mvp"
          android:layout_width="11.0dip"
          android:layout_height="11.0dip"
          android:layout_alignRight="@id/user_portrait_layout"
          android:layout_alignTop="@id/user_portrait_layout"
          android:layout_marginRight="103.0dip"
          android:layout_marginTop="76.0dip"
          android:background="@drawable/control_circle_bg"
          android:visibility="invisible"
          />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/uesrname_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_portrait_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/room_user_name_margintop"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:fitsSystemWindows="false"
        >
      <TextView
          android:id="@+id/txt_username"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:gravity="center"
          android:maxWidth="160.0dip"
          android:singleLine="true"
          android:text="加菲猫"
          android:textColor="@color/room_userinfo_nick"
          android:textSize="18.0sp"
          android:textStyle="bold"
      />
      <ImageView
          android:id="@+id/img_gender"
          android:layout_width="18.0sp"
          android:layout_height="18.0sp"
          android:layout_marginLeft="5.0sp"
          android:contentDescription="@string/app_name"
          android:scaleType="fitXY"
          android:src="@drawable/global_female"
          />
      <RelativeLayout
          android:id="@+id/grade_ly"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="3dp"
          android:layout_marginTop="1.5dp"
          android:background="@drawable/icon_medal_32_1"
          android:gravity="center_vertical"
          >
        <TextView
            android:id="@+id/grade_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="130"
            android:textColor="@color/white"
            android:textSize="12sp"
            />
      </RelativeLayout>

      <ImageView
          android:id="@+id/offical_tag_iv"
          android:layout_width="34dp"
          android:layout_height="18dp"
          android:layout_marginLeft="1dp"
          android:layout_marginRight="3dp"
          android:layout_marginTop="2dp"
           android:src="@drawable/official_tag_chat"
          android:visibility="gone"
           />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/uesrname_container"
        android:orientation="vertical"
        android:paddingLeft="@dimen/room_userdialog_leftpadding"
        android:paddingRight="@dimen/room_userdialog_leftpadding"
        android:fitsSystemWindows="false"
        >
      <LinearLayout
          android:id="@+id/chat_medal_ly"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:orientation="horizontal"
          >
        <include
            layout="@layout/medal_gif_chat_ly"
            android:id="@+id/gif_iv1"
            android:visibility="gone"
            />
        <include
            layout="@layout/medal_gif_chat_ly"
            android:id="@+id/gif_iv2"
            android:visibility="gone"
            />
        <include
            layout="@layout/medal_gif_chat_ly"
            android:id="@+id/gif_iv3"
            android:visibility="gone"
            />
        <include
            layout="@layout/medal_gif_chat_ly"
            android:id="@+id/gif_iv4"
            android:visibility="gone"
            />
        <include
            layout="@layout/medal_gif_chat_ly"
            android:id="@+id/gif_iv5"
            android:visibility="gone"
            />
        <include
            layout="@layout/medal_gif_chat_ly"
            android:id="@+id/gif_iv6"
            android:visibility="gone"
            />
        <include
            layout="@layout/medal_gif_chat_ly"
            android:id="@+id/gif_iv7"
            android:visibility="gone"
            />
        <include
            layout="@layout/medal_gif_chat_ly"
            android:id="@+id/gif_iv8"
            android:visibility="gone"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:layout_gravity="center_horizontal">
        <TextView
              android:id="@+id/txt_uid"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="3.0dip"
              android:text="ID:1231231"
              android:textColor="#ff656565"
              android:textSize="16.0sp"
              />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:background="#ff959595">

        </LinearLayout>
        <TextView
            android:id="@+id/txt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beijing"
            android:paddingTop="3.0dip"
            android:paddingLeft="10dp"
            android:textColor="#ff656565"
            android:textSize="16.0sp"
            />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/location_container"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="3.0dip"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:visibility="gone"
          >
        <ImageView
            android:id="@+id/img_location"
            android:layout_width="10.0sp"
            android:layout_height="13.0sp"
            android:layout_marginLeft="1.0dip"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/room_pop_up_location"
            />
      </LinearLayout>
      <TextView
          android:id="@+id/txt_verify_reason"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="0.0dip"
          android:text="微博认证：wei,产品经理"
          android:textColor="@color/gold_color"
          android:drawablePadding="5dp"
          android:gravity="center_vertical"
          android:drawableLeft="@drawable/icon_chat_v"
          android:textSize="13.0sp"
          />
      <TextView
        android:id="@+id/txt_desc"
        android:text="超级公告先生"
        style="@style/room_userinfo_dialog_userdesc"
        />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/friends_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_container"
        android:fitsSystemWindows="false"
        >
      <LinearLayout
          android:id="@+id/relative_container"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_gravity="center_vertical"
          android:layout_marginTop="15.0dip"
          android:orientation="vertical"
          android:paddingLeft="@dimen/room_userdialog_relative_paddingleft"
          android:paddingRight="@dimen/room_userdialog_relative_paddingleft"
          >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <LinearLayout
              android:id="@+id/btn_follows"
              android:gravity="left"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="35dp"
              android:layout_weight="1"
              >
            <TextView
                android:text="@string/userhome_followers_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/txt_follows"
                android:text="0"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />

          </LinearLayout>
          <LinearLayout
              android:id="@+id/btn_fans"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_weight="1"
              android:gravity="left"
              >
            <TextView
                android:text="@string/userhome_fans_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/txt_fans"
                android:text="0"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />

          </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">
          <LinearLayout
              android:id="@+id/account_inout_container"
              android:gravity="left"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="35dp"
              android:layout_weight="1"
              >

            <TextView
                android:text="送出:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFBB11F"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/txt_account_inout"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFBB11F"
                android:textSize="16sp"
                />
          </LinearLayout>
          <LinearLayout
              android:id="@+id/btn_contributors"
              android:gravity="left"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_weight="1"
                >
            <TextView
                android:text="@string/userhome_account_goldcoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFBB11F"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/txt_contributors"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFBB11F"
                android:textSize="16sp"
                  />
          </LinearLayout>
        </LinearLayout>
      </LinearLayout>
      <RelativeLayout
          android:id="@+id/indicator"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/relative_container"
          android:fitsSystemWindows="false"
          >
        <View
            android:layout_width="fill_parent"
            android:layout_height="5.0dip"
            android:layout_below="@+id/pointers"
            android:layout_marginLeft="-1.0dip"
            android:layout_marginRight="-1.0dip"
            android:layout_marginTop="-1.0dip"
            android:background="@drawable/room_userinfo_divider"
            android:visibility="gone"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FFF7F7F7"></LinearLayout>
        <LinearLayout
            android:id="@+id/pointers"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/room_userdialog_relative_paddingleft"
            android:paddingRight="@dimen/room_userdialog_relative_paddingleft"
            >
          <LinearLayout
              android:gravity="center_horizontal"
              android:orientation="horizontal"
              style="@style/weight_length_horizontal"
              >
            <ImageView
                android:id="@+id/img_follows_pointer"
                android:layout_width="16.0dip"
                android:layout_height="8.5dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/room_pop_up_triangle"
                android:visibility="gone"
                />
          </LinearLayout>
          <LinearLayout
              android:gravity="center_horizontal"
              android:orientation="horizontal"
              style="@style/weight_length_horizontal"
              >
            <ImageView
                android:id="@+id/img_fans_pointer"
                android:layout_width="16.0dip"
                android:layout_height="8.5dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/room_pop_up_triangle"
                android:visibility="invisible"
                />
          </LinearLayout>
          <LinearLayout
              android:gravity="center_horizontal"
              android:orientation="horizontal"
              style="@style/weight_length_horizontal"
              >
            <ImageView
                android:id="@+id/img_contributors_pointer"
                android:layout_width="16.0dip"
                android:layout_height="8.5dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/room_pop_up_triangle"
                android:visibility="invisible"

                />
          </LinearLayout>
        </LinearLayout>
      </RelativeLayout>
      <com.ilikezhibo.ggzb.pull.widget.PullToRefreshView
          xmlns:stay="http://schemas.android.com/apk/res-auto"
          android:id="@+id/dialog_list"
          android:layout_width="fill_parent"
          android:layout_height="300dp"
          android:layout_below="@id/indicator"
          android:background="#efeeee"
          android:divider="@color/marging_line"
          android:dividerHeight="0dp"
          android:layoutAnimation="@anim/list_controller"
          android:listSelector="@drawable/group_view_selector"
          android:scrollbars="none"
          android:visibility="gone"
          stay:pullMode="scrollBottom"
          />

      <LinearLayout
          android:id="@+id/oper_container"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/dialog_list"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="10.0dip"
          android:orientation="horizontal"
          android:paddingLeft="10.0dip"
          android:paddingRight="10.0dip"
          android:fitsSystemWindows="false"
          >
        <Button
            android:id="@+id/btn_follow"
            android:text="@string/userhome_add_attention"
            android:background="#00ffffff"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:background="#FFF2F2F2">
        </LinearLayout>
        <Button
            android:id="@+id/btn_private_chat"
            android:text="@string/userhome_private_chat"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:textSize="16sp"
            android:visibility="gone"
            />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:background="#FFF2F2F2">
          android:visibility="gone"
        </LinearLayout>
        <Button
            android:id="@+id/btn_reply"
            android:text="@string/userhome_room_reply"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:textSize="16sp"
            />
        <LinearLayout
            android:id="@+id/ll_btn_home"
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:background="#FFF2F2F2">
        </LinearLayout>
        <Button
            android:id="@+id/btn_home"
            android:text="主页"
            android:textSize="16sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:visibility="gone"
            />
      </LinearLayout>
    </RelativeLayout>
  </RelativeLayout>
</RelativeLayout>