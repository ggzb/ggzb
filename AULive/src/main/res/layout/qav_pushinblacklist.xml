<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_lahei"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/global_main_bg"
    android:orientation="horizontal"
    >
  <Button
      android:id="@+id/txt_followinlahei"
      android:layout_width="0.0dip"
      android:layout_height="40.0dip"
      android:layout_weight="1.0"
      android:background="#00000000"
      android:drawableLeft="@drawable/sixinfollow"
      android:drawablePadding="5.0dip"
      android:gravity="center|left"
      android:paddingLeft="30.0dip"
      android:text="关注"
      android:textSize="15dp"
      android:textColor="#ffffffff"
      />
  <View
      android:layout_width="0.100000024dip"
      android:layout_height="20.0dip"
      android:layout_marginTop="15.0dip"
      android:background="#ffb8b8b8"
      />
    <Button
      android:id="@+id/txt_chat"
      android:layout_width="0.0dip"
      android:layout_height="40.0dip"
      android:layout_weight="1.0"
      android:background="#00000000"
      android:drawableLeft="@drawable/sixinchat"
      android:drawablePadding="5.0dip"
      android:gravity="center|left"
        android:layout_gravity="center"
      android:paddingLeft="35.0dip"
      android:text="私信"
      android:textSize="15dp"
      android:textColor="#ffffffff"
        android:visibility="gone"
      />
  <View
      android:id="@+id/lahei_divider_line"
      android:layout_width="0.100000024dip"
      android:layout_height="20.0dip"
      android:layout_marginTop="15.0dip"
      android:background="#ffb8b8b8"
      android:visibility="gone"
      />
  <Button
      android:id="@+id/txt_solo"
      android:layout_width="0.0dip"
      android:layout_height="40.0dip"
      android:layout_weight="1.0"
      android:background="#00000000"
      android:drawableLeft="@drawable/solo"
      android:drawablePadding="5.0dip"
      android:gravity="center|left"
      android:paddingLeft="35.0dip"
      android:text="1对1"
      android:textSize="15dp"
      android:textColor="#ffffffff"
      android:visibility="gone"
      />
</LinearLayout>